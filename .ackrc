# File Types
--type-add=css=scss
--type-add=ruby=.haml,.rselm,.feature,.ru,.lock
--type-set=coffeescript=.coffee
--type-set=coffee=.coffee
--type-set=coffee=.coffee
--type-set=jade=.jade
--type-set=feature=.feature
--type-set=json=.json

# Ignores
--nosql
--ignore-file=match:.sql
--ignore-file=match:.beam

--ignore-dir=.git

--ignore-dir=node_modules

--ignore-file=is:tags
--ignore-file=match:TAGS

## Ruby/Rails stuff
--ignore-dir=.bundle/
--ignore-dir=.sass-cache/
--ignore-dir=doc/app
--ignore-dir=lib/converter
--ignore-dir=log
--ignore-dir=public/assets
--ignore-dir=public/javascripts/jquery
--ignore-dir=public/javascripts/jquery-ui
--ignore-dir=public/javascripts/jquery_plugins
--ignore-dir=public/javascripts/jquery_plugins_modified
--ignore-dir=public/system
--ignore-dir=tmp
--ignore-dir=vendor
--ignore-dir=coverage

